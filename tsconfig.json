{
   "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "esnext",
      "target": "es2018",
      "jsx": "react-jsx",
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
         "*": [
            "./src/*"
         ]
      }
   },
   "ts-node": {
      "compilerOptions": {
         "module": "CommonJS"
      }
   },
   "include": [
      "./config/jest/jestSetup.ts",
      "./src/**/*.ts",
      "./src/**/*.tsx",
   ]
}